<style>
	.page-hero {
		position: relative;
		height: 60vh;
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		margin-top: 80px;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -2;
	}

	.hero-background img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
		z-index: -1;
	}

	.hero-content {
		text-align: center;
		color: var(--white);
		max-width: 600px;
		margin: 0 auto;
	}

	.hero-title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle {
		font-size: 1.2rem;
		opacity: 0.95;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
	}

	.terrasse-details {
		background-color: var(--white);
	}

	.terrasse-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		margin-bottom: 5rem;
	}

	.section-title {
		font-size: 2.5rem;
		color: var(--text-dark);
		margin-bottom: 2rem;
	}

	.terrasse-description {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--text-light);
	}

	.terrasse-description p {
		margin-bottom: 1.5rem;
	}

	.terrasse-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 1rem;
		box-shadow: var(--shadow-lg);
	}

	.terrasse-moments {
		margin-bottom: 5rem;
	}

	.terrasse-moments h3 {
		font-size: 2rem;
		text-align: center;
		margin-bottom: 3rem;
		color: var(--text-dark);
	}

	.moments-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.moment-card {
		background-color: var(--white);
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: var(--shadow);
		transition: transform 0.3s ease;
	}

	.moment-card:hover {
		transform: translateY(-5px);
	}

	.moment-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.moment-content {
		padding: 1.5rem;
	}

	.moment-content h4 {
		font-size: 1.2rem;
		margin-bottom: 0.5rem;
		color: var(--text-dark);
	}

	.moment-content p {
		color: var(--text-light);
		line-height: 1.6;
	}

	.terrasse-features {
		margin-bottom: 5rem;
	}

	.terrasse-features h3 {
		font-size: 2rem;
		text-align: center;
		margin-bottom: 3rem;
		color: var(--text-dark);
	}

	.features-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
	}

	.feature-row {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem;
		background-color: var(--secondary-beige);
		border-radius: 1rem;
		transition: transform 0.3s ease;
	}

	.feature-row:hover {
