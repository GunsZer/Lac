<style>
	.page-hero {
		position: relative;
		height: 60vh;
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		margin-top: 80px;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -2;
	}

	.hero-background img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
		z-index: -1;
	}

	.hero-content {
		text-align: center;
		color: var(--white);
		max-width: 600px;
		margin: 0 auto;
	}

	.hero-title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle {
		font-size: 1.2rem;
		opacity: 0.95;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
	}

	.jardin-details {
		background-color: var(--white);
	}

	.jardin-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		margin-bottom: 5rem;
	}

	.section-title {
		font-size: 2.5rem;
		color: var(--text-dark);
		margin-bottom: 2rem;
	}

	.jardin-description {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--text-light);
	}

	.jardin-description p {
		margin-bottom: 1.5rem;
	}

	.jardin-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 1rem;
		box-shadow: var(--shadow-lg);
	}

	.event-types {
		margin-bottom: 5rem;
	}

	.event-types h3 {
		font-size: 2rem;
		text-align: center;
		margin-bottom: 3rem;
		color: var(--text-dark);
	}

	.events-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.event-card {
		background-color: var(--secondary-beige);
		padding: 2rem;
		border-radius: 1rem;
		text-align: center;
		transition: transform 0.3s ease;
	}

	.event-card:hover {
		transform: translateY(-5px);
	}

	.event-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.event-card h4 {
		font-size: 1.3rem;
		margin-bottom: 1rem;
		color: var(--text-dark);
	}

	.event-card p {
		color: var(--text-light);
		line-height: 1.6;
	}

	.jardin-features h3 {
		font-size: 2rem;
		text-align: center;
		margin-bottom: 3rem;
		color: var(--text-dark);
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.feature-box {
		background-color: var(--white);
		padding: 2rem;
		border-radius: 1rem;
		text-align: center;
		box-shadow: var(--shadow);
		transition: transform 0.3s ease;
	}

	.feature-box:hover {
		transform: translateY(-5px);
